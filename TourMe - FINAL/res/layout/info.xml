<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/Purple"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <ImageView 
        android:background="@drawable/color_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        android:gravity="center_horizontal"
        android:text="Eiffel Tower Information"
        android:textColor="@color/LightGrey"
        android:textSize="25sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70sp" >

        <RelativeLayout
            android:id="@+id/nameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/nameLBL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Address:"
                android:textColor="@color/White"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameLBL"
                android:paddingLeft="10sp"
                android:text="Champ de Mars, 5 Avenue Anatole France, 75007 Paris, France"
                android:textColor="@color/White"
                android:textSize="25sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ageLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameLayout" >

            <TextView
                android:id="@+id/ageLBL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Opening Hours:"
                android:textColor="@color/White"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="20sp" />

            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ageLBL"
                android:paddingLeft="10sp"
                android:text="Daily 09:30-23:00"
                android:textColor="@color/White"
                android:textSize="25sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/langLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ageLayout" 
            android:layout_marginTop="20sp">

            <TextView
                android:id="@+id/langListLBL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Contact:"
                android:textColor="@color/White"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/langList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/langListLBL"
                android:paddingLeft="10sp"
                android:text="+33 892 70 12 39"
                android:textColor="@color/White"
                android:textSize="25sp" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180sp"
        android:orientation="horizontal" >

        <Button
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_gravity="left"
            android:layout_marginRight="170sp"
            android:background="@drawable/prev" />

        <Button
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_gravity="right"
            android:layout_marginRight="10sp"
            android:background="@drawable/thumbs_up" />
    </LinearLayout>

</LinearLayout>